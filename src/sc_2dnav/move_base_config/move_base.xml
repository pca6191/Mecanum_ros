<launch>
<!--
  Example move_base configuration. Descriptions of parameters, as well as a full list of all amcl parameters, can be found at http://www.ros.org/wiki/move_base.
-->

  <arg name="model" default="mecanum"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
    <param name="allow_unknown" value="false" />
    <param name="shutdown_costmaps" value="false" />
    <param name="controller_frequency" value="10" />
    <!--<param name="controller_frequency" value="3" />-->
    <param name="planner_patience" value="5.0" />
    <param name="controller_patience" value="15.0" />
    <param name="conservative_reset_dist" value="3.0" />
    <param name="planner_frequency" value="5.0" />
    <!--<param name="planner_frequency" value="1.0" />-->
    <param name="oscillation_timeout" value="10.0" />
    <param name="oscillation_distance" value="0.22" />
    <param name="recovery_behavior_enabled" value="false"/>

    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <param name="base_global_planner" value="global_planner/GlobalPlanner"/>

    <rosparam file="$(find sc_2dnav)/move_base_config/$(arg model)/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find sc_2dnav)/move_base_config/$(arg model)/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find sc_2dnav)/move_base_config/$(arg model)/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find sc_2dnav)/move_base_config/$(arg model)/global_costmap_params.yaml" command="load" />
    
    <!--rosparam file="$(find sc_2dnav)/move_base_config/$(arg model)/base_local_planner_params.yaml" command="load" /-->
    <!-- rosparam file="$(find sc_2dnav)/move_base_config/$(arg model)/global_planner_params.yaml" command="load" /-->
    <rosparam file="$(find sc_2dnav)/move_base_config/$(arg model)/dwa_local_planner_params.yaml" command="load" />

  <remap from="/cmd_vel" to="/mobile_base/mobile_base_controller/cmd_vel"/>
  <remap from="/odom"    to="/mobile_base/mobile_base_controller/odom"/> 
 </node>
 
</launch>
